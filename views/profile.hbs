{{>nav user=user}}
<div class="container">
	<div class="row">
		<div class="col-3 me-5">
			<h3 class="border-bottom pb-2">Profile</h3>
			<form action="/profile?_method=PATCH" method="POST">
				<label for="exampleInputPassword1" class="form-label mb-0"
					>Name</label
				>
				<input name="name" type="text" class="form-control mb-3"  value="{{user.name}}" />

				<label for="exampleInputEmail1" class="form-label mb-0"
					>Email</label
				>
				<input
					name="email"
					type="email"
					class="form-control mb-2 "
					id="exampleInputEmail1"
					aria-describedby="emailHelp"
					value="{{user.email}}"
				/>
				<label>Profile Picture</label>
				<div class="row mt-2">
					<div class="col-sm-3">
						<img

							src="{{user.avatar}}"
							class="img-fluid rounded-circle mb-2"
							alt="housepictures"
						/>
					</div>
				</div>
				<input name="avatar" type="text" class="form-control mb-2 " value="{{user.avatar}}" />

				<button type="submit" class="btn btn-primary btn-success my-2">
					Save Changes
				</button>
			</form>
		</div>
		<div class="col-8 ps-5 ">
			<h3 class="border-bottom pb-2">My Listings</h3>
			<a href="/houses/create" type="submit" class="btn btn-primary btn-success my-3">
				List a House
			</a>


			<!--  -->
			<div class=" card mb-0">
				<div class="card-body p-0">
					<div class="row row-cols-1 p-0 ">
						<div class="col-4">
							<img
								class="img-fluid"
								alt="housepictures"
							/>
						</div>
						<div class="col-8 ">
							<p>
							</p>
							<a href="/houses/{{house._id}}/edit"
								type="submit"
								class="btn btn-outline-secondary p-1 mb-3 "
							>
								Edit
							</a>
							<a href="/houses/{{house._id}}"
								type="submit"
								class="btn btn-outline-success p-1 mb-3 "
							>
								View
							</a>
						</div>
					</div>

				</div>
			</div>
			{{else}}
			<!-- No listed houses -->

			<div class="card mb-2">
				<div class="card-body">
					<h6>You don't have any houses listed</h6>
				</div>
			</div>
		</div>
	</div>
</div>
