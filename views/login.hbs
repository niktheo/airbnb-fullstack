<div class="bg">
	 <!-- Background  -->
	 <container class="position-absolute top-50 start-50 translate-middle">
		 <div class="card p-3" style="width: 30rem;">
			 <div class="row align-self-center">
				 <div class="col">
					 <img
						 class="card-img-top logo my-4"
						 src="/images/logo-airbnb.png"
						 alt="Card image cap"
					 />
				 </div>
			 </div>

			 <div class="card-body">
				 <div class="row">
					 <div class="col">
						 <form action="/auth/login" method="POST">
							 <label for="exampleInputEmail1" class="form-label mb-0"
								 >Email</label
							 >
							 <input
							 	 name="email"
								 type="email"
								 class="form-control mb-2 "
								 id="exampleInputEmail1"
								 aria-describedby="emailHelp"
							 />

							 <label for="exampleInputPassword1" class="form-label mb-0"
								 >Password</label
							 >
							 <input
							   name="password"
								 type="password"
								 class="form-control"
								 id="exampleInputPassword1"
							 />

							 <div id="emailHelp" class="form-text"></div>

							 <button type="submit" class="btn btn-primary btn-success my-3">
								 Login
							 </button>
							 <label
								 for="exampleInputPassword1"
								 class="form-label d-block mb-0"
								 >New to AirBnB? <a href="">Signup</a></label
							 >

							 <!-- <h5>New to AirBnB? <a href="">Signup</a> <h5> -->
						 </form>
					 </div>
				 </div>
			 </div>
		 </div>
	 </container>
 </div>
