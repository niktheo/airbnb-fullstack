<div class="bg">
	 <!-- Background  -->
	 <container class="position-absolute top-50 start-50 translate-middle">
		 <div class="card p-3" style="width: 30rem;">
			 <div class="row align-self-center">
				 <div class="col">
					 <img
						 class="card-img-top logo my-4"
						 src="/images/logo-airbnb.png"
						 alt="Card image cap"
					 />
				 </div>
			 </div>

			 <div class="card-body">
				 <div class="row">
					 <div class="col">
						 <form action="/auth/singup" method="POST">
							 <label class="form-label mb-0">Your Full Name</label>
							 <input name="name" type="text" class="form-control mb-2 " />
							 <label class="form-label mb-0">Profile Picture</label>
							 <input name="avatar"
								 type="text"
								 class="form-control mb-2 "
								 placeholder="http://..."
							 />
							 <label class="form-label mb-0">Email</label>
							 <input name="email" type="email" class="form-control mb-2 " />
							 <label class="form-label mb-0">Password</label>
							 <input name="password" type="password" class="form-control" />

							 <button type="submit" class="btn btn-primary btn-success my-3">
								 SignUp
							 </button>
							 <label class="form-label d-block mb-0"
								 >Already have an account? <a href="http://localhost:3002/auth/login">Login</a></label
							 >
						 </form>
					 </div>
				 </div>
			 </div>
		 </div>
	 </container>
 </div>
